<p style="color: green"><%= notice %></p>

<h1 style="text-align:center">Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p style="text-align:center">
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<div style="text-align:center">
<%= link_to "New post", new_post_path %>
</div>